@page
@model CodexAppSuggestion.Pages.SignUpModel
@{
}

<section class=" d-flex flex-column flex-md-row gap-4 gap-md-0 welcome-section ">

    <div class="col-md-4 d-flex flex-column justify-content-center align-items-center bg-light">
        <a asp-area="" asp-page="/Index" class="navbar-brand text-dark fw-bold fs-3 font-monospace my-5">IdeaApp</a>
        <form method="post" class="w-50">
            <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label for="UserName" class="text-secondary h6">Username:</label>
                <input type="text" class="form-control rounded-2" asp-for="UserName" placeholder="Your Dev Name">
            </div>
            <div class="form-group">
                <label for="Email" class="text-secondary h6">Email:</label>
                <input type="email" class="form-control rounded-2" asp-for="Email" placeholder="someone@email.com">
            </div>
            <div class="form-group my-4">
                <label for="Password" class="text-secondary h6">Password:</label>
                <input type="password" class="form-control rounded-2" asp-for="Password">
            </div>
            <div class="form-group my-4">
                <label for="ConfirmPassword" class="text-secondary h6">Confirm Password:</label>
                <input type="password" class="form-control rounded-2" asp-for="ConfirmPassword">
            </div>
            <div class="d-flex align-items-center justify-content-center">
                <button class="btn btn-success w-100 py-2 px-md-5 rounded-3 button-color" type="submit" asp-page-handler="userLogin">Create Account</button>
            </div>
            <div class="d-flex align-items-center justify-content-start">
                <a class="text-primary py-3 text-decoration-none fw-bold rounded-3" asp-area="" asp-page="/Index">Login</a>
            </div>
        </form>
    </div>

    <div class="d-flex flex-column p-3 welcome-background rounded-end col ">
        <div class="d-flex flex-column  text-center my-auto gap-2">
            <h1 class="text-secondary mb-0">Welcome!!</h1>
            <p class="text-secondary w-75 mx-auto lead">Create an account to continue.</p>
        </div>
    </div>

</section>


